<!DOCTYPE html>
<html>
<head>
  <title><%= @title %></title>
  <meta charset="UTF-8">
  <meta name="viewport" content="initial-scale=1.0;"/>
  <link rel="stylesheet" type="text/css" href="../css/book.css">

</head>

<body>

  <div id="page" class="article">

    <div class="top-bar <%= @section %>"></div>

    <% if @banner_image %>
      <header class="banner <%= @light %>" style="background-image: url(../images/<%= @banner_image %>)">
    <% else %>
      <header>
    <% end %>

      <div class="container">

        <h1><%= @title %></h1>
        <h2>by <%= @author %></h2>

      </div>

    </header>

    <div class="container">

      <% if @banner_image %>
        <article class="banner">
      <% else %>
        <article>
      <% end %>

        <%= @article_text %>
      </article>

    </div>

  </div>

</body>
